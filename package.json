{
  "name": "drug-reminder",
  "version": "1.0.0",
  "description": "A drug prescription reminder web app",
  "main": "index.js",
  "engines": {
    "node": "12.16.1"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.5",
    "sequelize-cli": "^5.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-syntax-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.8.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "env-test": "^1.0.0",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "faker": "^4.1.0",
    "mocha": "^7.1.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./dist/index.js",
    "test": "nyc mocha --require @babel/register --timeout 2000ms --exit",
    "pretest": "NODE_ENV=test npm run migrate:all",
    "babel-node": "babel-node",
    "dev": "nodemon --exec npm run babel-node -- ./src/index.js",
    "build": "babel src --out-dir dist",
    "migrate": "./node_modules/.bin/sequelize db:migrate",
    "migrate:undo": "./node_modules/.bin/sequelize db:migrate:undo:all",
    "migrate:all": "npm run migrate:undo && npm run migrate",
    "lint": "./node_modules/.bin/eslint src --fix",
    "heroku-postbuild": "npm run build",
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmaadesile/drug-reminder.git"
  },
  "keywords": [],
